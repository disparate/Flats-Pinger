    <item
        android:bottom="@dimen/subway_selector_checkbox_padding"
        android:left="@dimen/subway_selector_checkbox_padding"
        android:right="@dimen/subway_selector_checkbox_padding"
        android:top="@dimen/subway_selector_checkbox_padding">
