<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filterScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <CheckBox
            android:id="@+id/filterAllowAgency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_allow_agency"
            android:textAppearance="@style/TextAppearance.Regular.Medium" />


        <CheckBox
            android:id="@+id/filterAllowOnlyWithPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_allow_with_photos_only"
            android:textAppearance="@style/TextAppearance.Regular.Medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:text="@string/filter_rooms_number"
                android:textAppearance="@style/TextAppearance.Regular.Medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/filterRent1k"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rent_1k"
                    android:textAppearance="@style/TextAppearance.Regular.Medium" />

                <CheckBox
                    android:id="@+id/filterRent2k"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rent_2k"
                    android:textAppearance="@style/TextAppearance.Regular.Medium" />

                <CheckBox
                    android:id="@+id/filterRent3k"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rent_3k"
                    android:textAppearance="@style/TextAppearance.Regular.Medium" />

                <CheckBox
                    android:id="@+id/filterRent4kAndMore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/rent_4k"
                    android:textAppearance="@style/TextAppearance.Regular.Medium" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:layout_weight="1"
                android:text="@string/filter_min_cost"
                android:textAppearance="@style/TextAppearance.Regular.Medium" />

            <EditText
                android:id="@+id/filterMinCostEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eczar"
                android:inputType="numberSigned"
                android:minEms="4" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:textColor="@color/colorTextSecondary"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/filter_max_cost"
                android:textAppearance="@style/TextAppearance.Regular.Medium" />

            <EditText
                android:id="@+id/filterMaxCostEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eczar"
                android:inputType="numberSigned"
                android:minEms="4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:textColor="@color/colorTextSecondary"
                android:layout_weight="1"
                android:text="@string/filter_keywords_title"
                android:textAppearance="@style/TextAppearance.Regular.Medium" />

            <FrameLayout
                android:id="@+id/filterEditKeywordsButton"
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:background="@drawable/rectangle_circular_bg">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:tint="@android:color/white" />
            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:textColor="@color/colorTextSecondary"
                android:text="@string/filter_subway_title"
                android:textAppearance="@style/TextAppearance.Regular.Medium" />

            <FrameLayout
                android:id="@+id/filterEditSubwaysButton"
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:background="@drawable/rectangle_circular_bg">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:tint="@android:color/white" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>