<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/subway_selector_item_height_half"
        android:paddingTop="@dimen/subway_selector_item_height_half">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="-2dp"
            android:paddingLeft="@dimen/subway_selector_checkbox_width_with_padding_half">

            <View
                android:id="@+id/subwaysSelectorVerticalLine"
                android:layout_width="4dp"
                android:layout_height="match_parent" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/subwaysSelectorMainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />


</merge>